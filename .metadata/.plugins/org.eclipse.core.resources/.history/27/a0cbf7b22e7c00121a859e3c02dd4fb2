package com.careercup.arraysandstrings;

public class RemoveMultipleSpacesInString {

	/*
	 * public void pruneSpaces(String str){ if(str.length() == 0) return; int
	 * spaceIndex, pos = 0; StringBuilder sb = new StringBuilder(str); while(pos
	 * < sb.length()){ spaceIndex = sb.toString().indexOf(" ", pos); pos =
	 * spaceIndex + 1; while(sb.ge == " "){
	 * 
	 * } } }
	 */

	public static void main(String[] args) {
		String str = "Ur     m  i";
		int count = 0;
		StringBuilder sb = new StringBuilder(str);
		for (int i = 0; i < sb.length(); i++) {
			if (Character.toString(sb.charAt(i)).equals(" ")) {
				count++;
				if (count == 1) {
					sb.deleteCharAt(i);
					count = 0;
				}
			}

		}
		System.out.println(sb);

	}

}
