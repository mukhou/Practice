package com.careercup.arraysandstrings;

public class PrintAllSubsetsOfAString {

	public static void printAllSubsets(String s) {
		int[] base = new int[s.length()];
		String s1 = "";
		while (!s1.equals(s)) {
			s1 = "";
			nextCombination(base);
			for (int i = 0; i < base.length; i++) {
				if (base[i] == 1) {
					s1 = s1 + s.charAt(i);
				}
			}
			System.out.println(s1);
		}
	}

	public static void nextCombination(int[] arr) {
		int i = arr.length - 1;
		while (i >= 0) {
			if (arr[i] == 0) {
				break;
			}
			i--;
		}
		if (i < 0) {
			return;
		}

		arr[i++] = 1;
		while (i < arr.length) {
			arr[i++] = 0;
		}
	}
	
	public static void printSubsets(String str){
		for(int i = 0, j = 0; i < str.length(); i++, j++){
			System.out.println(str.charAt(i));
			System.out.println(str.charAt(i) + str.charAt(i+j));
		}
	}

	public static void main(String[] args) {
		String str = "urmi";
		//printAllSubsets(str);
		printSubsets(str);

	}

}
